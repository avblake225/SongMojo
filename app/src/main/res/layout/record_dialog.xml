<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_mic"
        android:layout_width="@dimen/ic_mic_width"
        android:layout_height="@dimen/ic_mic_height"
        android:layout_margin="@dimen/ic_mic_margin"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_mic_black_24dp"/>

    <Chronometer
        android:id="@+id/my_chronometer"
        android:format="%s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/chronometer_text_size"/>

</LinearLayout>
