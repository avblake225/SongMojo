<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tonyblake.songmojo.UploadFile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/record_audio_header"
        android:text="@string/record_audio"
        android:layout_below="@id/toolbar"
        android:gravity="center_horizontal"
        style="@style/screen_title_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_box"
        android:layout_marginLeft="@dimen/layout_box_margin"
        android:layout_marginRight="@dimen/layout_box_margin"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/record_audio_layout_box_margin_left"
            android:layout_marginTop="@dimen/record_audio_layout_box_margin_top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/file_name"
                style="@style/header_text_style"/>

            <TextView
                android:id="@+id/tv_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_filename_margin_left"
                style="@style/input_text_style"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/record_audio_layout_box_margin_left"
            android:layout_marginBottom="@dimen/record_audio_layout_box_margin_bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipient"
                style="@style/header_text_style"/>

            <TextView
                android:id="@+id/tv_recipient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/input_recipient_margin_left"
                style="@style/input_text_style"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/cue_background_track"
            android:drawablePadding="@dimen/record_audio_drawable_padding"
            android:drawableLeft="@drawable/ic_queue_music_black_24dp"
            android:layout_marginBottom="@dimen/btn_cue_background_track_margin_bottom"
            android:id="@+id/btn_cue_background_track"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/record"
            android:drawablePadding="@dimen/record_audio_drawable_padding"
            android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
            android:id="@+id/btn_record"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/stop"
            android:drawablePadding="@dimen/record_audio_drawable_padding"
            android:drawableLeft="@drawable/ic_stop_black_24dp"
            android:id="@+id/btn_stop"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/play"
            android:drawablePadding="@dimen/record_audio_drawable_padding"
            android:drawableLeft="@drawable/ic_play_arrow_black_24dp"
            android:id="@+id/btn_play"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/btn_upload_margin_bottom"
            android:text="@string/send"
            android:drawablePadding="@dimen/record_audio_drawable_padding"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:id="@+id/btn_send"/>

    </LinearLayout>

</RelativeLayout>